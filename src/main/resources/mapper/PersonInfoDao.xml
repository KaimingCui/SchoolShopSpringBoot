<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaiming.o2osb.dao.PersonInfoDao">
	<select id="queryPersonInfoList" resultType="com.kaiming.o2osb.entity.PersonInfo">
		SELECT
		user_id,
		name,
		gender,
		email,
		profile_img,
		user_type,
		create_time,
		last_edit_time,
		enable_status
		FROM
		tb_person_info
		<where>
			<!-- 写like语句的时候 一般都会写成 like '% %' 在mybatis里面写就是应该是 like '%${name} %' 而不是 
				'%#{name} %' ${name} 是不带单引号的，而#{name} 是带单引号的 -->
			<if test="personInfoCondition != null and personInfoCondition.name != null">
				and name like '%${personInfoCondition.name}%'
			</if>
			<if test="personInfoCondition != null and personInfoCondition.enableStatus != null">
				and enable_status = #{personInfoCondition.enableStatus}
			</if>
		</where>
		ORDER BY
		create_time DESC
		LIMIT #{rowIndex},#{pageSize};
	</select>
	<select id="queryPersonInfoCount" resultType="int">
		SELECT
		count(1)
		FROM
		tb_person_info
		<where>
			<!-- 写like语句的时候 一般都会写成 like '% %' 在mybatis里面写就是应该是 like '%${name} %' 而不是 
				'%#{name} %' ${name} 是不带单引号的，而#{name} 是带单引号的 -->
			<if test="personInfoCondition != null and personInfoCondition.name!=null">
				and name like '%${personInfoCondition.name}%'
			</if>
			<if test="personInfoCondition != null and personInfoCondition.enableStatus!=null">
				and enable_status = #{personInfoCondition.enableStatus}
			</if>
		</where>
	</select>
	<select id="queryPersonInfoById" resultType="com.kaiming.o2osb.entity.PersonInfo"
		parameterType="Long">
		SELECT
		user_id,
		name,
		gender,
		email,
		profile_img,
		user_type,
		create_time,
		last_edit_time,
		enable_status
		FROM
		tb_person_info
		WHERE
		user_id = #{userId}
	</select>
	<insert id="insertPersonInfo" parameterType="com.kaiming.o2osb.entity.PersonInfo"
		useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
		INSERT
		INTO
		tb_person_info(name,gender,email,profile_img,user_type,
		create_time,last_edit_time,enable_status)
		VALUES
		(#{name},#{gender},#{email},#{profileImg},
		#{userType},#{createTime},#{lastEditTime},#{enableStatus})
	</insert>
	<update id="updatePersonInfo" parameterType="com.kaiming.o2osb.entity.PersonInfo">
		update tb_person_info
		<set>
			<if test="name != null">name=#{name},</if>
			<if test="gender != null">gender=#{gender},</if>
			<if test="email != null">email=#{email},</if>
			<if test="profileImg != null">profile_img=#{profileImg},</if>
			<if test="userType != null">user_type=#{userType},</if>
			<if test="lastEditTime != null">last_edit_time=#{lastEditTime},</if>
			<if test="enableStatus != null">enable_status=#{enableStatus}</if>
		</set>
		where user_id=#{userId}
	</update>
</mapper>